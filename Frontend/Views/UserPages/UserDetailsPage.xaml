<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.UserPages.UserDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Frontend.CustomControls"
    xmlns:converters="using:Frontend.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views.UserPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Frontend.ViewModels"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Padding="24" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,24"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <Button
                    Command="{Binding NavigateToUsersPageCommand}"
                    Style="{ThemeResource DateTimePickerFlyoutButtonStyle}"
                    ToolTipService.ToolTip="Cofnij">
                    <FontIcon FontSize="16" Glyph="&#xE72B;" />
                </Button>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon
                        FontSize="24"
                        Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                        Glyph="&#xE779;" />
                    <TextBlock
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Szczegóły Użytkownika" />
                </StackPanel>
            </StackPanel>

            <Border
                Grid.Row="1"
                MinWidth="450"
                MaxWidth="600"
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <StackPanel Spacing="20">

                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Dane logowania i profil" />

                    <StackPanel DataContext="{Binding User}" Spacing="20">

                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Medium"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Email" />
                            <TextBox
                                InputScope="EmailSmtpAddress"
                                PlaceholderText="name@company.com"
                                Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock
                                    FontWeight="Medium"
                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                    Text="Imię" />
                                <TextBox PlaceholderText="Jan" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="8">
                                <TextBlock
                                    FontWeight="Medium"
                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                    Text="Nazwisko" />
                                <TextBox PlaceholderText="Kowalski" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Medium"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Rola" />
                            <ComboBox
                                HorizontalAlignment="Stretch"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding DataContext.Roles, ElementName=PageRoot}"
                                PlaceholderText="Wybierz rolę..."
                                SelectedValue="{Binding SelectedRole, Mode=TwoWay}"
                                SelectedValuePath="Id" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock
                                FontWeight="Medium"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Hasło" />
                            <PasswordBox x:Name="UserPasswordBox" PlaceholderText="Wprowadź hasło..." />
                        </StackPanel>
                    </StackPanel>

                    <Grid Margin="0,24,0,0">
                        <Button
                            Padding="0,10"
                            HorizontalAlignment="Stretch"
                            Command="{Binding UserSaveCommand}"
                            CommandParameter="{Binding ElementName=UserPasswordBox}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE74E;" />
                                <TextBlock Text="Zapisz" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <controls:LoadingOverlay Canvas.ZIndex="100" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Page>
