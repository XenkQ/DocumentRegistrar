<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.ContractorsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Frontend.ViewModels"
    x:Name="ContractorsPageRoot"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="100"
                Margin="8,8,0,8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{x:Bind _contractorsViewModel.NavigateToMainPageCommand}"
                Content="Cofnij" />
            <Button
                Grid.Column="2"
                Width="100"
                Margin="0,8,8,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{x:Bind _contractorsViewModel.NavigateToContractorDetailsCommand}"
                Content="Dodaj" />
        </Grid>

        <ListView
            Grid.Row="1"
            Margin="8"
            ItemsSource="{Binding Contractors}">
            <ListView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="Nazwa" />
                    <TextBlock
                        Grid.Column="1"
                        FontWeight="Bold"
                        Text="Symbol" />
                    <TextBlock Grid.Column="2" Text="" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" />
                        <TextBlock Grid.Column="1" Text="{Binding Symbol}" />
                        <Button
                            Grid.Column="3"
                            Margin="0,0,4,0"
                            Command="{Binding DataContext.NavigateToContractorDetailsCommand, ElementName=ContractorsPageRoot}"
                            CommandParameter="{Binding}"
                            Content="Edytuj" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
