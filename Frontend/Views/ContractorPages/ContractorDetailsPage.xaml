<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.ContractorPages.ContractorDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views.ContractorPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" DataContext="{Binding Contractor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="100"
            Command="{x:Bind _contractorDetailsViewModel.NavigateToContractorsPageCommand}"
            Content="Cofnij" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,8,0"
            VerticalAlignment="Center"
            Text="Nazwa:" />
        <TextBox
            x:Name="NazwaTextBox"
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,8,0"
            VerticalAlignment="Center"
            Text="Symbol:" />
        <TextBox
            x:Name="SymbolTextBox"
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,8,0,0"
            Text="{Binding Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Width="100"
            HorizontalAlignment="Right"
            Command="{x:Bind _contractorDetailsViewModel.ContractorSaveCommand}"
            Content="Zapisz" />
    </Grid>
</Page>
