<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.AdmissionDocumentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Frontend.ViewModels"
    x:Name="AdmissionDocumentsPageRoot"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="100"
                Margin="8,8,0,8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{x:Bind _admissionDocumentsViewModel.NavigateToMainPageCommand}"
                Content="Cofnij" />
            <Button
                Grid.Column="2"
                Width="100"
                Margin="0,8,8,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{x:Bind _admissionDocumentsViewModel.NavigateToAdmissionDocumentDetailsPageCommand}"
                Content="Dodaj" />
        </Grid>

        <ListView
            Grid.Row="1"
            Margin="8"
            ItemsSource="{Binding AdmissionDocuments}">
            <ListView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Padding="8,0"
                        FontWeight="Bold"
                        Text="Data"
                        TextAlignment="Left" />
                    <TextBlock
                        Grid.Column="1"
                        Padding="8,0"
                        FontWeight="Bold"
                        Text="Symbol"
                        TextAlignment="Left" />
                    <TextBlock
                        Grid.Column="2"
                        Padding="8,0"
                        FontWeight="Bold"
                        Text="Kontrahent"
                        TextAlignment="Left" />
                    <TextBlock Grid.Column="3" Text="" />
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Padding="8,0"
                            Text="{Binding Date}"
                            TextAlignment="Left" />
                        <TextBlock
                            Grid.Column="1"
                            Padding="8,0"
                            Text="{Binding Symbol}"
                            TextAlignment="Left" />
                        <TextBlock
                            Grid.Column="2"
                            Padding="8,0"
                            Text="{Binding ContractorName}"
                            TextAlignment="Left" />
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button
                                Margin="0,0,4,0"
                                Command="{Binding DataContext.NavigateToAdmissionDocumentDetailsPageCommand, ElementName=AdmissionDocumentsPageRoot}"
                                CommandParameter="{Binding}"
                                Content="Edytuj" />
                            <Button
                                Command="{Binding DataContext.NavigateToDocumentPositionsPageCommand, ElementName=AdmissionDocumentsPageRoot}"
                                CommandParameter="{Binding}"
                                Content="Dokumenty Pozycji" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
