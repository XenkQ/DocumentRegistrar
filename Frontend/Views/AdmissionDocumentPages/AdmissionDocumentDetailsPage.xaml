<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.AdmissionDocumentPages.AdmissionDocumentDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Frontend.CustomControls"
    xmlns:converters="using:Frontend.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views.AdmissionDocumentPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:DateOnlyToDateTimeOffsetConverter x:Key="DateOnlyToDateTimeOffsetConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Padding="24" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,24"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <Button
                    Command="{Binding NavigateToAdmissionDocumentsPageCommand}"
                    Style="{ThemeResource DateTimePickerFlyoutButtonStyle}"
                    ToolTipService.ToolTip="Cofnij">
                    <FontIcon FontSize="16" Glyph="&#xE72B;" />
                </Button>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon
                        FontSize="24"
                        Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                        Glyph="&#xE70F;" />
                    <TextBlock
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Szczegóły Dokumentu" />
                </StackPanel>
            </StackPanel>

            <Border
                Grid.Row="1"
                MinWidth="450"
                MaxWidth="600"
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <StackPanel Spacing="20">

                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Edycja danych" />

                    <StackPanel Spacing="8">
                        <TextBlock
                            FontWeight="Medium"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            Text="Data" />
                        <CalendarDatePicker
                            x:Name="DocumentDatePicker"
                            HorizontalAlignment="Stretch"
                            Date="{Binding AdmissionDocument.Date, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeOffsetConverter}}" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock
                            FontWeight="Medium"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            Text="Symbol" />
                        <TextBox
                            x:Name="SymbolTextBox"
                            PlaceholderText="Wprowadź symbol..."
                            Text="{Binding AdmissionDocument.Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Spacing="8">
                        <TextBlock
                            FontWeight="Medium"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            Text="Kontrahent" />
                        <ComboBox
                            x:Name="KontrahentComboBox"
                            HorizontalAlignment="Stretch"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding Contractors}"
                            PlaceholderText="Wybierz kontrahenta"
                            SelectedItem="{Binding SelectedContractor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <Grid Margin="0,24,0,0">
                        <Button
                            Padding="0,10"
                            HorizontalAlignment="Stretch"
                            Command="{Binding AdmissionDocumentSaveCommand}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE74E;" />
                                <TextBlock Text="Zapisz zmiany" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <controls:LoadingOverlay Canvas.ZIndex="100" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Page>
