<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Frontend.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Frontend.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Frontend.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Frontend.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="12">
                <FontIcon
                    FontSize="24"
                    Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                    Glyph="&#xE80D;" />
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                    Text="Rejestrator Dokumentów" />
            </StackPanel>

            <TextBlock
                Grid.Column="1"
                Padding="12,8"
                Text="{x:Bind _viewModel.UserName, Mode=OneWay}" />

            <Button
                Grid.Column="2"
                Padding="12,8"
                Command="{x:Bind _viewModel.NavigateToLoginPageCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE77B;" />
                    <TextBlock Text="Zaloguj się" />
                </StackPanel>
            </Button>
        </Grid>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="24">

            <Button
                Width="260"
                Height="180"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderThickness="1"
                Command="{x:Bind _viewModel.NavigateToAdmissionDocumentsCommand}"
                CornerRadius="8">

                <StackPanel Spacing="16">
                    <FontIcon
                        FontSize="48"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Glyph="&#xE8A5;" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Dokumenty Przyjęć"
                        TextAlignment="Center" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        Text="Zarządzaj przyjęciami"
                        TextAlignment="Center" />
                </StackPanel>
            </Button>

            <Button
                Width="260"
                Height="180"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderThickness="1"
                Command="{x:Bind _viewModel.NavigateToContractorsCommand}"
                CornerRadius="8">

                <StackPanel Spacing="16">
                    <FontIcon
                        FontSize="48"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Glyph="&#xE716;" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Kontrahenci"
                        TextAlignment="Center" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        Text="Baza klientów i dostawców"
                        TextAlignment="Center" />
                </StackPanel>
            </Button>

            <Button
                Width="260"
                Height="180"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderThickness="1"
                Command="{x:Bind _viewModel.NavigateToDocumentPositionTypesCommand}"
                CornerRadius="8"
                Visibility="{x:Bind _viewModel.CanShowDocumentPositionTypePanel, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">

                <StackPanel Spacing="16">
                    <FontIcon
                        FontSize="48"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Glyph="&#xE8EC;" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        Text="Typy Pozycji"
                        TextAlignment="Center" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        Text="Typy pozycji dokumentów"
                        TextAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="12"
            Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
            Opacity="0.5"
            Text="v1.0.0" />
    </Grid>
</Page>
